<main>
  <h1>Welcome to SoftUni Wiki!</h1>
  {{#each errors}}
  <section id="notifications">
    <p>{{this.message}}</p>
  </section>
  {{/each}}
  <section>
    <h2>Edit article
    </h2>
    <div class="spacer">
      <form action="/article/edit/{{article._id}}" method="POST">
        <label>Article title</label>
        <h3>{{article.title}}</h3>
        <label>Content</label>
        <textarea name="description">{{article.description}}</textarea>
        <input type="submit" value="Submit">
      </form>
    </div>
  </section>
</main>